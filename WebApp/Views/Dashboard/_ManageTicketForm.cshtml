@model WebApp.Models.ManageTicketFormDashboardDto

@using (Html.BeginForm("UpdateTicket", "Dashboard", FormMethod.Post, new { id = "ManageForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID)
    <div class="form-group">
        @Html.LabelFor(m => m.PriorityID)
        @Html.DropDownListFor(m => m.PriorityID, Model.PrioritySelectList, "-- Select Priority --", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TypeID)
        @Html.DropDownListFor(m => m.TypeID, Model.TypeSelectList, "-- Select Type --", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @{
            var tagsList = new List<SelectListItem>();
            Model.Tags.ToList().ForEach(t => tagsList.Add(new SelectListItem() { Text = t, Value = t, Selected = true }));
         }
        @Html.DropDownListFor(m => m.Tags, tagsList, new { @class = "form-control", @multiple = "multiple", data_role="tagsinput" })

    </div>
    <input type="submit" value="Submit" class="btn btn-dark float-right" />
}
